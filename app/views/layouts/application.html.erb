<!DOCTYPE html>
<html>
  <head>
    <title>Tech Coders</title>
    <%= javascript_include_tag :defaults %> 
        <%= javascript_include_tag :application %>
    <%= csrf_meta_tags %>
    <%=stylesheet_link_tag 'site' %>

    
            <%= stylesheet_link_tag   'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>

  </head>

  <body>
   <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
             </button>
              <a class="navbar-brand" href="#">Tech_Coders</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
             
              <%if session[:e_id]== nil%>
              
              <ul class="nav navbar-nav navbar-right">
                <li> <%=link_to "Ask A Query",new_query_path%></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                <li> <%=link_to "Employee_login",employee_login_path%></li>
              </ul>
              <%else%>
              <ul class="nav navbar-nav navbar-right">
                <li> <%=link_to "Logout",employee_logout_path%></li>
              </ul>
              <%end%>
            </div><!--/.nav-collapse -->
        </div>
      </nav>
      <% flash.each do |a,b| %>
            <%if a=="success"%>
              <div class ="alert alert-default"><%= b%></div>
            <%else%>
              <div class ="alert alert-danger"><%= b%></div>
            <%end%>
          <%end%>
    <%= yield %>
    <style>body{
        padding-top:70px;
      }</style>
  </body>
</html>
